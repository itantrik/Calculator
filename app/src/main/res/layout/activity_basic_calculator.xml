<?xml
    version="1.0"
    encoding="UTF-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.basiccalc.mybasiccalc.BasicCalC">

    <TextView
        android:background="#ffffff"
        android:layout_height="50dp"
        android:layout_width="fill_parent"
        android:maxLength="999"
        android:maxLines="2"
        android:nestedScrollingEnabled="false"
        android:textSize="20sp"
        android:gravity="bottom|right"
        android:id="@+id/expression"
        android:text="00"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="0dp" />

    <TextView
        android:background="#ffffff"
        android:layout_height="85dp"
        android:layout_width="fill_parent"
        android:maxLength="17"
        android:maxLines="2"
        android:nestedScrollingEnabled="false"
        android:textSize="70sp"
        android:gravity="bottom|right"
        android:id="@+id/viewNum"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="50dp" />

    <Button
        android:background="#4d4d4d"
        android:layout_height="90dp"
        android:layout_width="90dp"
        android:textSize="30sp"
        android:id="@+id/btn7"
        android:text="7"
        android:maxWidth="90dp"
        android:onClick="onClickNumber"
        android:textColor="#ffffff"
        android:layout_alignStart="@+id/viewNum"
        android:layout_alignLeft="@+id/viewNum"
        android:layout_below="@+id/viewNum"/>

    <Button
        android:background="#4d4d4d"
        android:layout_height="90dp"
        android:layout_width="90dp"
        android:textSize="30sp"
        android:id="@+id/btn8"
        android:text="8"
        android:maxWidth="90dp"
        android:onClick="onClickNumber"
        android:textColor="#ffffff"
        android:layout_below="@+id/viewNum"
        android:layout_toEndOf="@+id/btn7"
        android:layout_toRightOf="@+id/btn7"/>

    <Button
        android:background="#4d4d4d"
        android:layout_height="90dp"
        android:layout_width="90dp"
        android:textSize="30sp"
        android:id="@+id/btn9"
        android:text="9"
        android:maxWidth="90dp"
        android:onClick="onClickNumber"
        android:textColor="#ffffff"
        android:layout_below="@+id/viewNum"
        android:layout_toEndOf="@+id/btn8"
        android:layout_toRightOf="@+id/btn8"/>

    <Button
        android:background="#4d4d4d"
        android:layout_height="90dp"
        android:layout_width="90dp"
        android:textSize="30sp"
        android:id="@+id/btn4"
        android:text="4"
        android:onClick="onClickNumber"
        android:textColor="#ffffff"
        android:layout_below="@+id/btn7"
        android:layout_toStartOf="@+id/btn5"
        android:layout_toLeftOf="@+id/btn5"/>

    <Button
        android:background="#4d4d4d"
        android:layout_height="90dp"
        android:layout_width="90dp"
        android:textSize="30sp"
        android:id="@+id/btn5"
        android:text="5"
        android:onClick="onClickNumber"
        android:textColor="#ffffff"
        android:layout_below="@+id/btn8"
        android:layout_toEndOf="@+id/btn7"
        android:layout_toRightOf="@+id/btn7"/>

    <Button
        android:background="#4d4d4d"
        android:layout_height="90dp"
        android:layout_width="90dp"
        android:textSize="30sp"
        android:id="@+id/btn6"
        android:text="6"
        android:onClick="onClickNumber"
        android:textColor="#ffffff"
        android:layout_below="@+id/btn9"
        android:layout_toEndOf="@+id/btn5"
        android:layout_toRightOf="@+id/btn5"/>

    <Button
        android:background="#4d4d4d"
        android:layout_height="90dp"
        android:layout_width="90dp"
        android:textSize="30sp"
        android:id="@+id/btn1"
        android:text="1"
        android:onClick="onClickNumber"
        android:textColor="#ffffff"
        android:layout_below="@+id/btn4"
        android:layout_toStartOf="@+id/btn5"
        android:layout_toLeftOf="@+id/btn5"/>

    <Button
        android:background="#4d4d4d"
        android:layout_height="90dp"
        android:layout_width="90dp"
        android:textSize="30sp"
        android:id="@+id/btn2"
        android:text="2"
        android:onClick="onClickNumber"
        android:textColor="#ffffff"
        android:layout_toEndOf="@+id/btn1"
        android:layout_toRightOf="@+id/btn1"
        android:layout_alignTop="@+id/btn1"/>

    <Button
        android:background="#4d4d4d"
        android:layout_height="90dp"
        android:layout_width="90dp"
        android:textSize="30sp"
        android:id="@+id/btn3"
        android:text="3"
        android:onClick="onClickNumber"
        android:textColor="#ffffff"
        android:layout_below="@+id/btn6"
        android:layout_toEndOf="@+id/btn5"
        android:layout_toRightOf="@+id/btn5"/>

    <Button
        android:background="#4d4d4d"
        android:layout_height="90dp"
        android:layout_width="90dp"
        android:textSize="30sp"
        android:id="@+id/btnClear"
        android:text="C"
        android:onClick="onClickClear"
        android:textColor="#ffffff"
        android:layout_alignStart="@+id/btn1"
        android:layout_alignLeft="@+id/btn1"
        android:layout_below="@+id/btn1"/>

    <Button
        android:background="#4d4d4d"
        android:layout_height="90dp"
        android:layout_width="90dp"
        android:textSize="30sp"
        android:id="@+id/btn0"
        android:text="0"
        android:onClick="onClickNumber"
        android:textColor="#ffffff"
        android:layout_below="@+id/btn2"
        android:layout_toEndOf="@+id/btn1"
        android:layout_toRightOf="@+id/btn1"/>

    <Button
        android:background="#4d4d4d"
        android:layout_height="90dp"
        android:layout_width="90dp"
        android:textSize="30sp"
        android:id="@+id/btnRes"
        android:text="="
        android:onClick="onClickEqual"
        android:textColor="#ffffff"
        android:layout_below="@+id/btn3"
        android:layout_toEndOf="@+id/btn0"
        android:layout_toRightOf="@+id/btn0"/>

    <Button
        android:background="#4d4d4d"
        android:layout_height="90dp"
        android:layout_width="90dp"
        android:textSize="30sp"
        android:id="@+id/btnAdd"
        android:text="+"
        android:maxWidth="90dp"
        android:onClick="onClickOperator"
        android:textColor="#ffffff"
        android:layout_below="@+id/viewNum"
        android:layout_toEndOf="@+id/btn9"
        android:layout_toRightOf="@+id/btn9"/>

    <Button
        android:background="#4d4d4d"
        android:layout_height="90dp"
        android:layout_width="90dp"
        android:textSize="30sp"
        android:id="@+id/btnSub"
        android:text="-"
        android:onClick="onClickOperator"
        android:textColor="#ffffff"
        android:layout_below="@+id/btnAdd"
        android:layout_toRightOf="@+id/btn9"/>

    <Button
        android:background="#4d4d4d"
        android:layout_height="90dp"
        android:layout_width="90dp"
        android:textSize="30sp"
        android:id="@+id/btnMul"
        android:text="x"
        android:onClick="onClickOperator"
        android:textColor="#ffffff"
        android:layout_below="@+id/btnSub"
        android:layout_toRightOf="@+id/btn9"/>

    <Button
        android:background="#4d4d4d"
        android:layout_height="90dp"
        android:layout_width="90dp"
        android:textSize="30sp"
        android:id="@+id/btnDiv"
        android:text="รท"
        android:onClick="onClickOperator"
        android:textColor="#ffffff"
        android:layout_below="@+id/btnMul"
        android:layout_toRightOf="@+id/btn9"/>

</RelativeLayout>